<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertDummy</servlet-name>
        <servlet-class>servlet.DummyInsertServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditDummy</servlet-name>
        <servlet-class>servlet.DummyEditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DummyRemove</servlet-name>
        <servlet-class>servlet.DummyRemoveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReFeature</servlet-name>
        <url-pattern>/ReFeature</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertDummy</servlet-name>
        <url-pattern>/DummyInsertServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditDummy</servlet-name>
        <url-pattern>/DummyEditServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DummyRemove</servlet-name>
        <url-pattern>/DummyRemoveServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>
				Login.jsp
			</welcome-file>
    </welcome-file-list>
</web-app>
